@using AVBlog.Domain.Constants
@using Microsoft.AspNetCore.Identity
@using AVBlog.Domain.Entities
@using AVBlog.Domain.Entities.Users

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsInRole(RoleConstant.Admin))
        {
            <li class="nav-item">
                <a class="nav-link text-black" asp-area="Admin" asp-controller="VideoAdmin" asp-action="Index">Management</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">Change Password</a>
            </li>
        }
        
        <li class="nav-item">
            <label class="nav-link text-black-50">@UserManager.GetUserName(User)</label>
        </li>

        
        <li class="nav-item">        
            <form id=" logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Video", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
</ul>
